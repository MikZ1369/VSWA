<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/forecast_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_row="0"
        android:layout_column="0"
        android:textSize="20sp"
        tools:text="Thu" />

    <TextView
        android:id="@+id/forecast_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:textSize="30sp"
        tools:text="@string/Sun" />

    <TextView
        android:id="@+id/forecast_item_temp_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_row="1"
        android:layout_column="1"
        android:textSize="30sp"
        tools:text="20°" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="2"
        android:textSize="30sp"
        android:text="/" />

    <TextView
        android:id="@+id/forecast_item_temp_night"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="3"
        android:textSize="25sp"
        tools:text="5°" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_row="1"
        android:layout_column="4"
        android:textSize="20sp"
        tools:text="@string/WindFlag" />

    <TextView
        android:id="@+id/forecast_item_wind_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_row="1"
        android:layout_column="5"
        android:textSize="20sp"
        tools:text="25" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_row="1"
        android:layout_column="6"
        android:textSize="15sp"
        android:text="@string/MetreSec" />

</GridLayout>