<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="DarkMode" parent="android:Theme.DeviceDefault.NoActionBar">
        <item name="android:background">@color/Black</item>
        <item name="android:seekBarStyle">@color/Black</item>
        <item name="android:tint">@color/White</item>
        <item name="android:textViewStyle">@style/DarkTextView</item>
        <item name="android:alertDialogStyle">@style/DarkAlertDialog</item>
    </style>

    <style name="LightMode" parent="android:Theme.DeviceDefault.NoActionBar">
        <item name="android:background">@color/White</item>
        <item name="android:seekBarStyle">@color/White</item>
        <item name="android:editTextColor">@color/Black</item>
        <item name="android:tint">@color/Black</item>
        <item name="android:textViewStyle">@style/LightTextView</item>
        <item name="android:checkboxStyle">@style/LightCheckBox</item>
        <item name="android:alertDialogStyle">@style/LightAlertDialog</item>
    </style>
    
    <style name="LightTextView" parent="android:Widget.TextView">
        <item name="android:background">@color/Invisible</item>
        <item name="android:textColor">@color/Black</item>
    </style>

    <style name="LightCheckBox" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:textColor">@color/Black</item>
        <item name="android:buttonTint">@color/Black</item>
    </style>

    <style name="DarkTextView" parent="android:Widget.TextView">
        <item name="android:background">@color/Invisible</item>
        <item name="android:textColor">@color/White</item>
    </style>

    <style name="LightAlertDialog" parent="android:Theme.DeviceDefault.Light.Dialog">
        <item name="android:background">@color/White</item>
    </style>

    <style name="DarkAlertDialog" parent="android:Theme.DeviceDefault.Light.Dialog">
        <item name="android:textColor">@color/White</item>
    </style>


</resources>